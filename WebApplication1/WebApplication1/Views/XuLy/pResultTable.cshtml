    <h5 class="card-title">Kết quả</h5>

    <table class="mb-0 table" id="table-ketqua">
        <thead>
            <tr>
                <th>Danh sách vật</th>
                <th>Những vật được chọn</th>
                <th>Tổng giá trị túi</th>
                <th>Thời gian chạy</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @foreach(var item in ViewBag.DanhSachVat)
                    {
                    <span>(@item.Weight, @item.Value)&nbsp;</span>
                    }
                </td>
                <td>
                    @foreach (char vat in ViewBag.VatDuocChon)
                    {
                        @vat
                    }
                </td>
                <td>
                    @ViewBag.Tong
                </td>
                <td>
                    @(
                    ViewBag.Milisecond * 1000) &micro;s
                </td>
            </tr>
        </tbody>
    </table>

    <script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['Gau gau', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
            datasets: [{
                label: '# of Votes',
                data: [12, 19, 3, 5, 2, 3],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
    </script>